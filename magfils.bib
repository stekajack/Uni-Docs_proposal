	Journal = {Macromolecules},
	Owner = {pedro},
	Pages = {1221--1239},
	Timestamp = {2015.06.02},
	Title = {Molecular Nanoparticles Are Unique Elements for Macromolecular Science: From `Nanoatoms' to Giant Molecules},
	Volume = {47},
	Year = {2014},
	Bdsk-Url-1 = {https://doi.org/10.1021/ma401724p}}

